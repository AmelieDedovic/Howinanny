<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= cl_image_tag @reservation.nanny.photo, width: '100%' %></div>
    <div class="col">
      <h1>Checkout summary</h1>
      <p>Votre r√©servation avec <strong><%= @reservation.nanny.first_name %></strong> for <strong><%= humanized_money_with_symbol @reservation.total_price_cents %></strong></p>
      <button id="pay" class="btn btn-primary">Pay</button>

      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @reservation.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
