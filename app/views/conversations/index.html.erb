<h1>Messagerie</h1>
<div class="chat-page">
  <div class="sender">
    <p><%= current_user.first_name %></p>
    <p><%= @conversation.nanny.first_name %></p>
  </div>


  <div class="chat-box">
    <% @messages.each do |m| %>
      <ul>
        <li><%= current_user.first_name %> - <%= time_ago_in_words(m.created_at) %></li>
        <li><%= m.content %></li>
      </ul>
    <% end %>

    <%= form_for @message do |f| %>
      <div class="field">
        <%= f.text_area :content, placeholder: "Votre message" %>
        <%= f.hidden_field :conversation_id, value: @conversation.id%>
      </div>

      <%= f.submit "Envoyer", method: :post%>
      <i class="fas fa-angle-double-right"></i>
    <% end %>
  </div>

  <div class="recap">
    <h3>Récapitulatif</h3>
      <ul class="inline">
        <li>Du <%= start = session[:start_date] %></li>
        <li>au <%= ended = session[:end_date] %></li>
        <% time = ended.to_time - start.to_time %>
      </ul>
      <p>Durée du séjour : <%= total_time = time.to_i/86400 %> jours </p>
      <ul>
        <% nanny_day = @conversation.nanny.price_per_day_cents %>
        <li>Service nounou : <%= nanny_day %> €/jour</li>
        <li>Estimation totale : <%= total_time*nanny_day %> €</li>
      </ul>
  </div>

  <button type="button" class="btn btn-secondary btn-resa" data-toggle="modal" data-target="#exampleModal">
    Réserver
  </button>
</div>
